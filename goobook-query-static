#!/bin/sh

# this queries a static text file of contacts
# output from goobook using something like
#
# goobook reload && \ 
# goobook query '@' | sort -u > ~/mail/temp/contacts.txt

. $HOME/.zshenv

for QUERY in "${@}" 
do 
	grep -i -e "${QUERY}" $HOME/$DATA_DIR/mail/contacts/contacts.txt || : 
done
